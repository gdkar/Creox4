#MIN_CONFIG(3)

AM_INIT_AUTOMAKE(creox,0.2.2rc2)

dnl JACK test
PKG_CHECK_MODULES(JACK, jack, HAVE_JACK=true, HAVE_JACK=false)
if [[ "$HAVE_JACK" == "true" ]]; then
	LIBS="$JACK_LIBS $LIBS"
	CXXLAGS="$JACK_CFLAGS $CXXFLAGS"
else
	AC_MSG_ERROR([ *** Could not find the JACK library, see http://jackit.sf.net])
fi

dnl Some needed compiler options
CXXFLAGS="$CXXFLAGS $USE_EXCEPTIONS $USE_RTTI -DKDE_NO_COMPAT -DQT_NO_COMPAT -DQT_CLEAN_NAMESPACE"

